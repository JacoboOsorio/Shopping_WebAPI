@model ShoppingWebAPI.DAL.Entities.Category

@{
    ViewData["Title"] = "Create";
}

<h1>Crear categoria</h1>

<h4>Categoria</h4>
<hr />
<dir class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <partial name="../Shared/PartialViews/_CategoryCreatedEdit.cshtml"/>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-outline-primary" />
                <a asp-action="Index" class="=btn btn-outline-success">Regresar</a>
            </div>
        </form>
    </div>
</dir>

@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}